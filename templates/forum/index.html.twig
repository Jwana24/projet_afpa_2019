{% extends 'base.html.twig' %}

{% block title %}{% trans %}Bienvenue sur le forum{% endtrans %}{% endblock %}

{% block body %}
    <table>
        <tr>
            <th>{% trans %}Titre{% endtrans %}</th>
            <th>{% trans %}Date{% endtrans %}</th>
            <th>{% trans %}Catégorie{% endtrans %}</th>
        <tr>

        {% for post in posts %}
            <tr>
                <td>{{post.TitlePost}}</td>
                <td>{{post.DatePost|date('d-m-y')}}</td>
                <td>{{post.categorie}}</td>
                <td><a href="{{ path('show_post', {'id' : post.Id}) }}">{% trans %}Voir{% endtrans %}</a></td>
            </tr>
        {% endfor %}
    </table>

    <select name="Catégories">
        <option value="mammifères">{% trans %}mammifères{% endtrans %}</option>
        <option value="reptiles">reptiles</option>
        <option value="amphibiens">{% trans %}amphibiens{% endtrans %}</option>
        <option value="oiseaux">{% trans %}oiseaux{% endtrans %}</option>
        <option value="poissons">{% trans %}poissons{% endtrans %}</option>
    </select>

    <a href="{{ path('add_post') }}">{% trans %}Ajouter un post{% endtrans %}</a>
    <a href="{{ path('accueil') }}">{% trans %}Revenir à la page d'accueil{% endtrans %}</a>

    {% for message in app.flashes('success') %}
        <div id="flash-notice" class="text-center mx-auto">
            {{ message }}
        </div>
    {% endfor %}

{% endblock %}